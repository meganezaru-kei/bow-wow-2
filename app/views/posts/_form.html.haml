- if flash[:error_messages]
  .alert.alert-danger
    %ul
      - flash[:error_messages].each do |msg|
        %li
          = msg

= form_for post do |f|
  .form-group
    = f.label :title, 'タイトル'
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :body, '本文'
    = f.text_area :body, class: 'form-control', rows: 12
  = f.submit '保存', class: 'btn btn-primary'
