.container.post-list
  %h1.text-center
    = "検索結果：#{@posts.length}件"
  = render 'layouts/flashes'
  .ml-auto.post-list__linkBox.text-right
    = form_tag posts_path, method: :get, class: 'post-list__searchForm' do
      = select_tag :tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]), { prompt: 'タグで絞り込み', class: 'form-control post-list__select', onchange: 'submit(this.form);' }
  .row.post-list__items
    = render partial: 'posts', locals: { posts: @posts }

  = paginate @posts

- if user_signed_in?
  .d-none.d-md-block
    = link_to icon("fas", "plus-circle") + ' 新規投稿', new_post_path, class: 'new-post-btn--pc'
  .d-block.d-md-none
    = link_to icon("fas", "plus"), new_post_path, class: 'new-post-btn--sp'
