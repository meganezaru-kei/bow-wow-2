.container.post-list
  %h1.text-center.font-weight-bold 投稿一覧
  .row.post-list__items
    %table.table.table-hover.boards__table
      %thead.thead-dark
        %tr
          %th No.
          %th タイトル
          %th 作成日時
          %th 更新日時
          %th
          %th
      %tbody
        - @posts.each_with_index do |post, index|
          %tr
            %td
              = index + 1
            %td
              = post.title
            %td
              = post.created_at.to_s(:datetime_jp)
            %td
              = post.updated_at.to_s(:datetime_jp)
            %td
              = link_to '詳細', post, class: 'btn btn-outline-dark'
            %td
              = link_to '削除', post, class: 'btn btn-outline-dark', method: :delete, data: { confirm: '本当に削除しますか？' }

    -# 以下仮置き
